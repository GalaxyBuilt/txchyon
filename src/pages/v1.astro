    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Labs -->
        <a href="http://localhost:3000" class="glass-card group p-8 rounded-[2.5rem] border border-cyan-500/20 hover:border-cyan-500/50 transition-all hover:-translate-y-2">
          <div class="text-5xl mb-6">ðŸ§¬</div>
