                        <div class="h-1 w-8 bg-orange-500/50 rounded-full"></div>
                    </div>
                  </div>
                  <div class="text-left md:text-right">
                    <div class="text-5xl font-black dark:text-white text-gray-900 italic tracking-tighter italic">{pkg.price}</div>
