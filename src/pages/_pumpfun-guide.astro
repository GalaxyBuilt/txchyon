                {product.title}
              </h1>
              
              <p class="text-xl text-gray-300 mb-8">
                {product.description}
              </p>
              
              <div class="flex items-center gap-4 mb-8">
                <div class="text-3xl font-bold text-white">${product.price}</div>
                <div class="text-gray-400 line-through text-lg">$47</div>
                <div class="px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-bold">
                  LAUNCH DISCOUNT
                </div>
              </div>
              
              <!-- Stripe Payment Link Button -->
              <a 
                href={product.stripePaymentLink}
                target="_blank"
                class="block w-full py-5 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-xl text-center text-lg hover:shadow-xl hover:shadow-purple-500/40 transition-all hover:scale-[1.02] mb-6"
