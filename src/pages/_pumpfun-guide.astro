---
import Base from "@/layouts/Base.astro";

// Product data
const product = {
  title: "How I Turned $200 into $20K on Pump.fun: The Complete Memecoin Playbook",
  price: 10,
  stripePaymentLink: "https://buy.stripe.com/test_XXXXXX", // You'll get this from Stripe
