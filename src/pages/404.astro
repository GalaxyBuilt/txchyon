---
import Base from "@/layouts/Base.astro";
import { getCollection } from 'astro:content';
import { CATEGORY_HIERARCHY } from '@/lib/categories';

// Get all posts for suggestions
const allPosts = await getCollection('posts', ({ data }) => !data.draft);
const popularPosts = allPosts
  .sort((a, b) => (b.data.date || 0) - (a.data.date || 0))
  .slice(0, 6);
---

<Base 
  title="404 - Transaction Not Found | Txchyon" 
  description="Oops! This page doesn't exist. But don't worry - we've got plenty of DeFi alpha waiting for you."
>
  
  <section class="section">
    <div class="container">
      <div class="py-16">
        
        <!-- Error Code with Crypto Style -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center gap-3 mb-6 px-6 py-3 bg-black/40 backdrop-blur-sm border border-cyan-500/30 rounded-2xl">
            <span class="text-cyan-400 text-2xl">‚ö†Ô∏è</span>
            <span class="text-white font-mono text-2xl">0x404</span>
            <span class="text-gray-400">TRANSACTION_NOT_FOUND</span>
          </div>
          
          <h1 class="h2 md:h1 mb-4 text-5xl md:text-7xl font-black">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-400 via-orange-400 to-yellow-400">
              404
            </span>
          </h1>
          
          <p class="text-2xl md:text-3xl text-gray-300 mb-4 max-w-3xl mx-auto">
            This block appears to be orphaned from the chain.
          </p>
          
          <p class="text-gray-400 text-lg mb-8 max-w-2xl mx-auto">
            The page you're looking for doesn't exist. Maybe it got rugged? 
            <span class="text-cyan-400 font-medium"> Don't worry, your funds are SAFU.</span>
          </p>
          
          {/* Main CTA */}
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a 
              href="/" 
              class="btn btn-primary group relative px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-bold rounded-xl hover:shadow-2xl hover:shadow-cyan-500/40 transition-all duration-300 transform hover:-translate-y-1"
            >
              <span class="relative z-10">üè† Return to Homepage</span>
            </a>
            
            <a 
              href="/blog" 
              class="btn px-8 py-4 bg-black/50 backdrop-blur-sm border-2 border-cyan-500/30 text-white font-bold rounded-xl hover:bg-cyan-500/10 hover:border-cyan-500 transition-all duration-300"
            >
              üìö Browse All Guides
            </a>
          </div>
        </div>
        
        {/* Popular Categories Section */}
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-white mb-8 text-center">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-400">
              Explore Our Learning Paths
            </span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {Object.entries(CATEGORY_HIERARCHY)
              .filter(([key]) => {
                // Only show categories that have posts
                const postsInCategory = allPosts.filter(p => p.data.category === key);
                return postsInCategory.length > 0;
              })
              .slice(0, 6)
              .map(([category, data]) => {
                const postsInCategory = allPosts.filter(p => p.data.category === category);
                
                return (
                  <a 
                    href={`/categories/${category}`}
                    class="group bg-gradient-to-br from-gray-900/80 to-black/80 border border-gray-800 rounded-2xl p-6 hover:border-cyan-500/50 hover:shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 hover:-translate-y-1"
                  >
                    <div class="flex items-start gap-4 mb-4">
                      <div class="text-2xl">{data.icon}</div>
                      <div>
                        <h3 class="text-xl font-bold text-white mb-1 group-hover:text-cyan-400 transition-colors">
                          {data.name}
                        </h3>
                        <p class="text-gray-400 text-sm">
                          {postsInCategory.length} guides
                        </p>
                      </div>
                    </div>
                    
                    <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                      {data.description}
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <span class="text-cyan-400 text-sm font-medium">
                        Explore ‚Üí
                      </span>
                      <span class="text-gray-500 text-xs">
                        {data.name.includes('Getting') ? 'Beginner' : 'Advanced'}
                      </span>
                    </div>
                  </a>
                );
              })}
          </div>
          
          <div class="text-center mt-8">
            <a 
              href="/categories" 
              class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors font-medium"
            >
              View all 11 categories ‚Üí
            </a>
          </div>
        </div>
        
        {/* Popular Guides */}
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-white mb-8 text-center">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
              Trending Guides
            </span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {popularPosts.map(post => (
              <a 
                href={`/blog/${post.slug}`}
                class="group bg-gradient-to-br from-gray-900/50 to-black/50 border border-gray-800 rounded-2xl p-6 hover:border-purple-500/30 hover:shadow-xl hover:shadow-purple-500/10 transition-all duration-300 hover:-translate-y-1"
              >
                <div class="mb-4">
                  <span class="inline-block px-3 py-1 bg-gray-800/50 text-cyan-300 rounded-full text-xs font-bold">
                    {post.data.category?.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') || 'Guide'}
                  </span>
                </div>
                
                <h3 class="text-lg font-bold text-white mb-3 group-hover:text-purple-400 transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                
                <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                  {post.data.description || 'Learn more about this topic...'}
                </p>
                
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">
                    {new Date(post.data.date).toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric',
                      year: 'numeric' 
                    })}
                  </span>
                  <span class="text-cyan-400 font-medium">
                    Read ‚Üí
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
        
        {/* Search Prompt */}
        <div class="bg-black/30 backdrop-blur-sm rounded-3xl border border-gray-800 p-8 max-w-3xl mx-auto">
          <div class="text-center">
            <h3 class="text-2xl font-bold text-white mb-4">üîç Can't find what you're looking for?</h3>
            <p class="text-gray-300 mb-6">
              Try searching our knowledge base or request a guide on our community channels.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                href="/blog" 
                class="btn px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-purple-500/30 transition-all"
              >
                Browse All Articles
              </a>
              <a 
                href="https://t.me/txchyon" 
                target="_blank"
                rel="noopener noreferrer"
                class="btn px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white font-semibold rounded-xl border border-gray-700 transition-colors"
              >
                Join Telegram
              </a>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </section>
  
  <style>
    /* Line clamp utilities */
    .line-clamp-1 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
    }
    
    .line-clamp-2 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }
    
    /* Smooth transitions */
    * {
      transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Custom button styles */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
      color: white;
      border: none;
    }
  </style>
  
</Base>