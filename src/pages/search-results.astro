---
import TwSizeIndicator from "@/components/TwSizeIndicator.astro";
import config from "@/config/config.json";
import theme from "@/config/theme.json";
import { plainify } from "@/lib/utils/textConverter";
import Footer from "@/partials/Footer.astro";
import Header from "@/partials/Header.astro";
import "@/styles/main.css";
import { AstroFont } from "astro-font";
import { ClientRouter } from "astro:transitions";
import SEO from "@/layouts/components/SEO.astro";

const pf = theme.fonts.font_family.primary;
let fontPrimary;
if (theme.fonts.font_family.primary) {
  fontPrimary = theme.fonts.font_family.primary
    .replace(/\+/g, " ")
    .replace(/:[ital,]*[ital@]*[wght@]*[0-9,;]+/gi, "");
}

const query = Astro.url.searchParams.get('q')?.trim() || '';

// Same glob + content reading
const pageModules = import.meta.glob('../pages/**/*.{astro,md,mdx}', { eager: true });
const guideModules = import.meta.glob('../../../guides/**/*.{md,mdx}', { eager: true });

const allModules = { ...pageModules, ...guideModules };

const allContent = Object.values(allModules)
  .filter(mod => mod.frontmatter?.title && mod.file)
  .map(mod => {
    let rawContent = '';
    try {
      rawContent = mod.rawContent?.() || mod.getRawContent?.() || '';
      if (!rawContent && mod.file) {
        const fileContent = Deno.readTextFileSync(mod.file);
        rawContent = fileContent || '';
      }
    } catch (e) {
      console.warn(`Could not read content for ${mod.file}`);
    }

    let url = '/';
    if (mod.url) {
      url = mod.url;
    } else if (mod.file) {
      url = mod.file
        .replace(/^.*src\/pages/, '')
        .replace(/^.*guides/, '/guides')
        .replace(/\/index\.(astro|md|mdx)$/, '/')
        .replace(/\.(astro|md|mdx)$/, '')
        .replace(/\/$/, '') || '/';
      if (!url.startsWith('/')) url = '/' + url;
    }

    return {
      title: mod.frontmatter.title || 'Untitled',
      description: mod.frontmatter.description || '',
      content: rawContent.toLowerCase(),
      url: url,
    };
  });

const results = query.length >= 2 
  ? allContent.filter(item => {
      const lowerQuery = query.toLowerCase();
      return (
        item.title.toLowerCase().includes(lowerQuery) ||
        item.description.toLowerCase().includes(lowerQuery) ||
        item.content.includes(lowerQuery)
      );
    })
  : [];

const title = query ? `Search Results for "${query}" - Txchyon` : "Search - Txchyon";
const description = query 
  ? `Search results for "${query}" across guides and documentation.`
  : "Search through all guides, tutorials, and pages on Txchyon.";

// FIXED: Add canonical logic to frontmatter
const cleanPath = Astro.url.pathname.replace(/\/$/, ""); // Remove trailing slash
const canonical = `${config.site.base_url}${cleanPath}`;
---

<Base title={title} description={description} canonical={canonical}>
  <main id="main-content" class="min-h-[60vh] py-24 dark:bg-black bg-white selection:bg-cyan-500 selection:text-black">
    <div class="container mx-auto px-4 max-w-4xl relative z-10">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 mb-4 px-3 py-1 rounded-full bg-purple-500/10 border border-purple-500/20">
          <span class="text-[8px] font-black text-purple-500 uppercase tracking-widest italic">Terminal_Output: Search_Results</span>
        </div>
        <h1 class="text-5xl font-black dark:text-white text-gray-900 mb-8 italic tracking-tighter uppercase leading-none">
          Search <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500">Results_</span>
        </h1>
        
        <div class="max-w-2xl mx-auto">
          <form method="GET" action="/search-results" class="relative group">
            <input
              type="search"
              name="q"
              value={query}
              placeholder="Search guides and pages..."
              class="w-full p-6 text-lg border dark:border-white/10 border-gray-200 rounded-2xl dark:bg-[#080808] bg-gray-50 focus:outline-none focus:border-purple-500/50 transition-all font-mono italic"
              autofocus
            />
            <button
              type="submit"
              class="absolute right-3 top-3 px-8 py-3 bg-gray-900 dark:bg-white text-white dark:text-black font-black uppercase text-xs tracking-widest rounded-xl hover:bg-purple-500 dark:hover:bg-purple-500 hover:text-white transition-all italic"
            >
              Search
            </button>
          </form>
        </div>
      </div>
      
      {query.length < 2 ? (
        <div class="text-center p-20 border border-dashed dark:border-white/10 border-gray-200 rounded-[2.5rem]">
          <p class="text-xl dark:text-gray-500 text-gray-400 font-medium italic">Please enter at least 2 characters to initiate protocol sync.</p>
        </div>
      ) : results.length === 0 ? (
        <div class="text-center p-20 border border-dashed dark:border-white/10 border-gray-200 rounded-[2.5rem]">
          <div class="text-5xl mb-6 opacity-20">ðŸš«</div>
          <p class="text-xl dark:text-gray-300 text-gray-700 mb-4 font-black italic uppercase tracking-tighter">No_Intel_Found</p>
          <p class="dark:text-gray-500 text-gray-400 font-medium italic">No matches for "<span class="text-purple-500 font-bold">{query}</span>" in the current database.</p>
        </div>
      ) : (
        <>
          <div class="flex items-center gap-4 mb-12">
            <span class="text-[10px] font-black text-gray-400 dark:text-gray-600 uppercase tracking-widest">
              Found <span class="dark:text-white text-gray-900">{results.length}</span> nodes for cluster: {query.toUpperCase()}
            </span>
            <div class="h-px flex-1 bg-gradient-to-r from-gray-100 to-transparent dark:from-white/5 dark:to-transparent"></div>
          </div>
          
          <div class="space-y-6">
            {results.map(item => (
              <article class="group relative overflow-hidden dark:bg-[#080808] bg-white border dark:border-white/1) border-gray-100 p-8 rounded-[2rem] hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
                <a href={item.url} class="block">
                  <div class="flex justify-between items-start mb-4">
                    <h2 class="text-2xl font-black italic uppercase tracking-tighter dark:text-white text-gray-900 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-purple-500 group-hover:to-pink-500 transition-all">
                      {item.title}
                    </h2>
                    <span class="text-[10px] font-black text-purple-500 opacity-0 group-hover:opacity-100 transition-opacity">â†’</span>
                  </div>
                  {item.description && (
                    <p class="text-sm dark:text-gray-400 text-gray-600 mb-6 leading-relaxed italic font-medium">
                      {item.description}
                    </p>
                  )}
                  <div class="text-[9px] font-black text-gray-400 dark:text-gray-600 tracking-widest uppercase font-mono">
                    PATH: {item.url}
                  </div>
                </a>
              </article>
            ))}
          </div>
        </>
      )}
    </div>
  </main>
</Base>
