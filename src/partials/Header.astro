---
import menu from "@/config/menu.json";
import { IoSearch } from "react-icons/io5";

const main = menu.main;
---

<header class="py-4 md:py-6 border-b border-gray-200 dark:border-gray-800">
  <div class="mx-auto px-4 md:px-6 lg:px-8 xl:px-12 max-w-7xl flex items-center justify-between gap-4 md:gap-6">
    
    <!-- LOGO + NAME -->
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center space-x-2 md:space-x-3">
        <img
          src="/images/logo.png"
          alt="Txchyon"
          class="w-8 h-8 md:w-10 md:h-10 rounded-lg object-cover"
        />
        <span class="text-xl md:text-2xl font-bold text-black dark:text-white whitespace-nowrap">
          Txchyon
        </span>
      </a>
    </div>

    <!-- Desktop Navigation - Tighter spacing -->
    <nav class="hidden md:flex items-center justify-center flex-1 max-w-2xl mx-4">
      <div class="flex items-center space-x-4 lg:space-x-6">
        {main.map(item => (
          <div class="relative group">
            {item.dropdown ? (
              <button class="text-base font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition whitespace-nowrap flex items-center gap-1 px-1">
                {item.name} <span class="text-xs">▼</span>
              </button>
            ) : (
              (item.name === "Alpha") ? (
                <a
                  href={item.url}
                  class="relative text-base font-bold text-white px-3 py-1 rounded-full transition whitespace-nowrap shadow-lg hover:shadow-xl group/alpha overflow-hidden"
                >
                  <!-- Animated gradient background -->
                  <div class="absolute inset-0 bg-gradient-to-r from-yellow-500 via-orange-500 to-yellow-500 bg-[length:200%_100%] animate-gradient-shift rounded-full"></div>
                  <!-- Pulsing effect -->
                  <div class="absolute inset-0 bg-gradient-to-r from-yellow-400/30 via-orange-400/30 to-yellow-400/30 rounded-full animate-pulse-slow"></div>
                  <!-- Content -->
                  <span class="relative z-10">{item.name}</span>
                </a>
              ) : (item.name === "Gaming") ? (
                <a
                  href={item.url}
                  class="relative text-base font-bold text-white px-3 py-1 rounded-full transition whitespace-nowrap shadow-lg hover:shadow-xl group/gaming overflow-hidden"
                >
                  <!-- Animated gradient background -->
                  <div class="absolute inset-0 bg-gradient-to-r from-purple-500 via-pink-500 to-purple-500 bg-[length:200%_100%] animate-gradient-shift rounded-full"></div>
                  <!-- Pulsing effect -->
                  <div class="absolute inset-0 bg-gradient-to-r from-purple-400/30 via-pink-400/30 to-purple-400/30 rounded-full animate-pulse-slow"></div>
                  <!-- Content -->
                  <span class="relative z-10">{item.name}</span>
                </a>
              ) : (
                <a
                  href={item.url}
                  class="text-base font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition whitespace-nowrap px-1"
                >
                  {item.name}
                </a>
              )
            )}

            {item.dropdown && (
              <ul class="absolute left-1/2 -translate-x-1/2 mt-3 w-48 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 pt-2">
                {item.dropdown.map(sub => (
                  <li>
                    <a
                      href={sub.url}
                      class="block px-4 py-2.5 text-sm hover:bg-gray-100 dark:hover:bg-gray-800 transition whitespace-nowrap"
                    >
                      {sub.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </nav>

    <!-- Icons: RSS, Search, Theme + Mobile Hamburger - Tighter spacing -->
    <div class="flex items-center gap-3 md:gap-4 lg:gap-5 flex-shrink-0">
      <a href="/rss.xml" class="text-black dark:text-white hover:text-blue-600 transition p-1" title="RSS Feed">
        <svg class="w-5 h-5 md:w-6 md:h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.18 15.64a2.18 2.18 0 1 1-4.36 0 2.18 2.18 0 0 1 4.36 0z"/>
          <path d="M4 4.44A11.83 11.83 0 0 1 15.89 16.33h-2.3A9.51 9.51 0 0 0 4 6.75z"/>
          <path d="M4 11.16a5.9 5.9 0 0 1 5.9 5.9h-2.3a3.6 3.6 0 0 0-3.6-3.6z"/>
        </svg>
      </a>
      
      <a href="/search" class="text-black dark:text-white hover:text-blue-600 transition p-1">
        <IoSearch class="w-5 h-5 md:w-6 md:h-6" />
      </a>

      <!-- Theme Toggle -->
      <button
        id="theme-toggle"
        class="p-1.5 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition"
        title="Toggle theme"
        aria-label="Toggle theme"
      >
        <svg id="theme-icon-sun" class="w-4 h-4 md:w-5 md:h-5 text-gray-700" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zm-3.05-.293l-.707-.707a1 1 0 00-1.414 1.414l.707.707a1 1 0 001.414-1.414z" clip-rule="evenodd"/>
        </svg>
        <svg id="theme-icon-moon" class="w-4 h-4 md:w-5 md:h-5 text-yellow-400 hidden" fill="currentColor" viewBox="0 0 20 20">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
        </svg>
        <span class="sr-only">Toggle theme</span>
      </button>

      <!-- Mobile Hamburger -->
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="text-black dark:text-white z-50 p-1">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path :class="{ 'hidden': open, 'block': !open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path :class="{ 'hidden': !open, 'block': open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile Menu -->
        <div x-show="open" @click.away="open = false" x-transition class="fixed inset-0 top-16 bg-white dark:bg-gray-900 z-40 overflow-y-auto">
          <div class="px-6 py-8 space-y-4">
            {main.flatMap(item => item.dropdown ? [{ name: item.name, url: null, isHeader: true }, ...item.dropdown] : [item]).map(item => (
              item.isHeader ? (
                <div class="text-sm font-semibold text-gray-500 uppercase pt-4 border-t border-gray-200 dark:border-gray-700 first:border-t-0 first:pt-0">
                  {item.name}
                </div>
              ) : (
                (item.name === "Alpha") ? (
                  <a
                    href={item.url}
                    class="relative block text-xl font-bold text-white px-4 py-2 rounded-full transition shadow-lg my-2 overflow-hidden"
                    @click="open = false"
                  >
                    <!-- Animated gradient background -->
                    <div class="absolute inset-0 bg-gradient-to-r from-yellow-500 via-orange-500 to-yellow-500 bg-[length:200%_100%] animate-gradient-shift rounded-full"></div>
                    <!-- Pulsing effect -->
                    <div class="absolute inset-0 bg-gradient-to-r from-yellow-400/30 via-orange-400/30 to-yellow-400/30 rounded-full animate-pulse-slow"></div>
                    <!-- Content -->
                    <span class="relative z-10">{item.name}</span>
                  </a>
                ) : (item.name === "Gaming") ? (
                  <a
                    href={item.url}
                    class="relative block text-xl font-bold text-white px-4 py-2 rounded-full transition shadow-lg my-2 overflow-hidden"
                    @click="open = false"
                  >
                    <!-- Animated gradient background -->
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-500 via-pink-500 to-purple-500 bg-[length:200%_100%] animate-gradient-shift rounded-full"></div>
                    <!-- Pulsing effect -->
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-400/30 via-pink-400/30 to-purple-400/30 rounded-full animate-pulse-slow"></div>
                    <!-- Content -->
                    <span class="relative z-10">{item.name}</span>
                  </a>
                ) : (
                  <a
                    href={item.url}
                    class="block text-xl font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400 py-2"
                    @click="open = false"
                  >
                    {item.name}
                  </a>
                )
              )
            ))}

            <a href="/contact" class="block text-xl font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400 py-2 border-t border-gray-200 dark:border-gray-700 pt-4 mt-4" @click="open = false">
              Contact Us
            </a>

            <div class="pt-4 border-t border-gray-200 dark:border-gray-700 flex gap-6">
              <a href="https://twitter.com/txchyon" class="text-black dark:text-white hover:text-blue-600">Twitter</a>
              <a href="/newsletter" class="text-black dark:text-white hover:text-blue-600">Newsletter</a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</header>

<style>
  /* Gradient shift animation */
  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  
  .animate-gradient-shift {
    background-size: 200% 100%;
    animation: gradient-shift 3s ease infinite;
  }
  
  /* Slow pulse animation */
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 2s ease-in-out infinite;
  }
</style>