                             <div class="flex-1 bg-orange-500/15 dark:bg-orange-500/25 border-t border-orange-500/40 dark:border-orange-500/50 rounded-t-lg h-[55%]"></div>
                             <div class="flex-1 bg-orange-500/20 dark:bg-orange-500/30 border-t border-orange-500/50 dark:border-orange-500/60 rounded-t-lg h-[65%]"></div>
                             <div class="flex-1 bg-orange-500/10 dark:bg-orange-500/20 border-t border-orange-500/30 dark:border-orange-500/40 rounded-t-lg h-[60%]"></div>
                             <div class="flex-1 bg-orange-500/25 dark:bg-orange-500/35 border-t border-orange-500/60 dark:border-orange-500/70 rounded-t-lg h-[75%]"></div>
                             <div class="flex-1 bg-orange-500/30 dark:bg-orange-500/40 border-t border-orange-500/70 dark:border-orange-500/80 rounded-t-lg h-[85%] animate-pulse"></div>
                        </div>

                        <!-- Chart Overlay Text -->
                        <div class="absolute inset-x-0 bottom-12 flex justify-between px-12 text-[8px] text-gray-400 dark:text-gray-600 font-black tracking-[0.4em]">
                             <span>JAN</span>
                             <span>MAR</span>
                             <span>MAY</span>
                             <span>JUL</span>
