---
import { CATEGORY_HIERARCHY } from '@/lib/categories';
import config from '@/config/config.json';
import { getCollection } from 'astro:content';

// Get all posts to count - with error handling
let allPosts = [];
let publishedPosts = [];
let totalPosts = 0;
let draftCount = 0;

try {
  allPosts = await getCollection('posts');
  publishedPosts = allPosts.filter(post => !post.data.draft);
  totalPosts = allPosts.length;
  draftCount = totalPosts - publishedPosts.length;
} catch (error) {
  console.log('Error loading posts for footer counter:', error);
  // Set default values
  totalPosts = 0;
  draftCount = 0;
}

// Define your footer links in a clean structure
const footerLinks = {
  ecosystem: {
    title: 'Ecosystem',
    links: [
      { name: 'Txchyon Capital', url: '/capital' },
      { name: 'Txchyon Labs', url: '/labs' },
      { name: 'Txchyon Shop', url: '/shop' },
      { name: 'Defi Guides', url: '/blog' },
    ]
  },
  services: {
    title: 'Services',
    links: [
      { name: 'Launch Services', url: '/services' },
      { name: 'Apply Now', url: '/services#apply' },
      { name: 'Twitter Marketing', url: '/services' },
    ]
  },
  resources: {
    title: 'Resources',
    links: [
      { name: 'Toolkit', url: '/tools' },
      { name: 'Newsletter', url: '/newsletter' },
      { name: 'Getting Started', url: '/categories/getting-started' },
      { name: 'Airdrop Farming', url: '/categories/airdrop-farming' },
    ]
  }
};

const currentYear = new Date().getFullYear();

// Check if we're on home page for newsletter
const isHomePage = Astro.url.pathname === '/' || Astro.url.pathname === '/index.html';
---
<footer class="border-t dark:border-gray-800 border-gray-200 py-12">
  <div class="container mx-auto px-4">
    
    {/* Main Footer Content */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      
      {/* Brand Column - Takes 1 column */}
      <div>
        <a href="/" class="flex items-center gap-3 mb-6">
          <img
            src="https://txchyon.com/images/logo.png"
            alt="Txchyon"
            class="w-12 h-12 rounded-lg object-cover"
          />
          <span class="text-2xl font-bold dark:text-white text-gray-900">
            Txchyon
          </span>
        </a>
        <p class="dark:text-gray-400 text-gray-600 text-sm mb-6">
          Premium DeFi education that should cost thousands... but we're giving it away free.
        </p>
        
        {/* Guide Counts */}
        <div class="mb-6 space-y-2">
          {/* Published Guides */}
          <p class="dark:text-gray-300 text-gray-700 text-sm">
            <span class="inline-flex items-center gap-1">
              <svg class="w-4 h-4 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.968 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
              </svg>
              <span class="font-semibold text-green-600 dark:text-green-400">{publishedPosts.length || 0}</span> 
              <span>Published Guides</span>
            </span>
          </p>

          {/* Total Guides */}
          <p class="dark:text-gray-400 text-gray-600 text-xs">
            <span class="inline-flex items-center gap-1">
              <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <span class="font-semibold text-blue-600 dark:text-blue-400">{totalPosts}</span> 
              <span>Total Guides</span>
              {draftCount > 0 && (
                <span class="text-yellow-600 dark:text-yellow-400 ml-1">
                  ({draftCount} draft)
                </span>
              )}
            </span>
          </p>
        </div>
        
        {/* Social Icons - This replaces the Connect section */}
        <div class="flex gap-4 mb-4">
          <a href="https://twitter.com/txchyon" 
             target="_blank"
             class="dark:text-gray-400 text-gray-600 hover:text-blue-500 dark:hover:text-blue-400 transition-colors"
             title="Twitter">
            <span class="text-xl">üê¶ Twitter</span>
          </a>
          <a href="/rss.xml" 
             class="dark:text-gray-400 text-gray-600 hover:text-orange-500 dark:hover:text-orange-400 transition-colors"
             title="RSS Feed">
            <span class="text-xl">üì° RSS</span>
          </a>
        </div>
        
        {/* Contact link under social icons */}
        <a href="/contact" 
           class="dark:text-gray-400 text-gray-600 hover:text-blue-600 dark:hover:text-blue-400 transition-colors text-sm">
          üìß Contact Us
        </a>
      </div>
      
      {/* Footer Link Columns - 3 columns for Services, Resources, Learn */}
      {Object.entries(footerLinks).map(([key, section]) => (
        <div key={key}>
          <h3 class="text-lg font-bold dark:text-white text-gray-900 mb-4">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.url}
                  class="dark:text-gray-400 text-gray-600 hover:text-blue-600 dark:hover:text-blue-400 transition-colors text-sm"
                  {link.url.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : {}}
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}    
    {/* Divider */}
    <div class="border-t dark:border-gray-800 border-gray-200 my-8"></div>
    
    {/* Bottom Bar */}
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      {/* Copyright & Links */}
      <div class="text-center md:text-left">
        <p class="dark:text-gray-500 text-gray-500 text-sm">
          ¬© {currentYear} Txchyon Capital. All content is free to share under{' '}
          <a href="https://creativecommons.org/licenses/by/4.0/" 
             target="_blank" 
             class="text-blue-600 dark:text-blue-400 hover:underline">
            CC BY 4.0
          </a>.
        </p>
        <p class="dark:text-gray-600 text-gray-600 text-[10px] mt-1 tracking-wider uppercase font-medium">
          Powered by <a href="https://everrank.app" target="_blank" rel="noopener noreferrer" class="hover:text-blue-500 dark:hover:text-blue-400 transition-colors">EverRank</a>, and created by <a href="https://galaxybuilt.dev" target="_blank" rel="noopener noreferrer" class="hover:text-blue-500 dark:hover:text-blue-400 transition-colors">GalaxyBuilt</a>
        </p>
      </div>
      
      {/* Legal Links */}
      <div class="flex flex-wrap justify-center gap-4 md:gap-6">
        <a href="/privacy" class="dark:text-gray-500 text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors">
          Privacy Policy
        </a>
        <a href="/terms" class="dark:text-gray-500 text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors">
          Terms of Service
        </a>
        <a href="/disclaimer" class="dark:text-gray-500 text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors">
          Disclaimer
        </a>
        <a href="/contact" class="dark:text-gray-500 text-gray-500 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors">
          Contact
        </a>
      </div>
    </div>
    
    {/* Important Notice */}
    <div class="mt-8 pt-6 border-t dark:border-gray-800 border-gray-200">
      <p class="dark:text-gray-600 text-gray-500 text-xs text-center">
        ‚ö†Ô∏è <strong>Not financial advice:</strong> All content is educational. DeFi involves risk. 
        Always do your own research and never invest more than you can afford to lose.
      </p>
    </div>
  </div>
</footer>

<style>
  /* Smooth hover effects */
  footer a {
    transition: all 0.2s ease;
  }
</style>