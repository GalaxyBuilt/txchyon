<!-- src/components/SimilarPosts.astro - PREMIUM READ NEXT SECTION -->
---
import { humanize, slugify } from "@/lib/utils/textConverter";
import dateFormat from "@/lib/utils/dateFormat";

const { posts = [] } = Astro.props;
---

{posts.length > 0 && (
  <section class="mt-24 pt-16 border-t border-gray-100 dark:border-white/5">
    <div class="flex items-center gap-4 mb-12">
      <h3 class="text-3xl font-black text-gray-900 dark:text-white uppercase italic tracking-tighter">
        Read <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-purple-500">Next_</span>
      </h3>
      <div class="h-px flex-1 bg-gradient-to-r from-gray-200 to-transparent dark:from-white/10 dark:to-transparent"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {posts.map((post: any) => {
        const { title, description, date, category, image } = post.data;
        const isNext = post.isNext;

        return (
          <a 
            href={`/blog/${post.slug}`} 
            class={`group relative flex flex-col p-6 rounded-[2rem] bg-gray-50 dark:bg-zinc-900/50 border transition-all duration-500 hover:-translate-y-2
              ${isNext 
                ? 'border-cyan-500/30 dark:border-cyan-500/30 shadow-[0_20px_40px_-12px_rgba(6,182,212,0.15)]' 
                : 'border-gray-200 dark:border-white/5 hover:border-cyan-500/30 dark:hover:border-white/20'
              }`}
          >
            {/* series badge */}
            {isNext && (
              <div class="absolute -top-3 left-6 px-3 py-1 bg-cyan-500 text-[9px] font-black text-black uppercase tracking-widest rounded-full z-10 shadow-lg animate-pulse">
                Next in Series
              </div>
            )}

            <div class="relative h-40 mb-6 overflow-hidden rounded-2xl">
              <img 
                src={image || "/images/posts/default-og.jpg"} 
                alt={title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>

            <div class="flex items-center gap-2 mb-4">
              <span class="text-[9px] font-black text-cyan-500 uppercase tracking-widest px-2 py-0.5 bg-cyan-500/10 rounded border border-cyan-500/20">
                {humanize(category)}
              </span>
              <span class="text-[9px] font-mono text-gray-400 dark:text-gray-500 uppercase">
                {dateFormat(date)}
              </span>
            </div>

            <h4 class="text-lg font-black text-gray-900 dark:text-white mb-3 italic tracking-tight leading-tight group-hover:text-cyan-500 transition-colors">
              {title}
            </h4>

            {description && (
              <p class="text-[11px] text-gray-500 dark:text-gray-400 font-medium leading-relaxed line-clamp-2 mb-6 italic">
                {description}
              </p>
            )}

            <div class="mt-auto flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-gray-400 dark:text-gray-600">
              <span class="group-hover:text-cyan-500 transition-colors">View_Intel</span>
              <span class="text-cyan-500 opacity-0 group-hover:opacity-100 transition-all translate-x-[-4px] group-hover:translate-x-0">â†’</span>
            </div>

            {/* Subtle glow on hover */}
            <div class="absolute inset-0 rounded-[2rem] bg-gradient-to-br from-cyan-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
          </a>
        );
      })}
    </div>
  </section>
)}