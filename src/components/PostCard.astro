<!-- src/components/PostCard.astro -->
---
import { humanize, slugify } from "@/lib/utils/textConverter";
import dateFormat from "@/lib/utils/dateFormat";

const { post, isFeatured = false } = Astro.props;
const { title, description, date, category, subcategory, image } = post.data;
const { slug } = post;
---

<a 
  href={`/blog/${slug}`} 
  class={`group relative flex flex-col p-5 rounded-[2.5rem] bg-gray-50/50 dark:bg-zinc-900/40 backdrop-blur-md border border-gray-200 dark:border-white/5 transition-all duration-500 hover:-translate-y-2 hover:border-cyan-500/30 dark:hover:border-white/20 hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] dark:hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.5)] overflow-hidden
    ${isFeatured ? 'md:p-8 lg:p-12' : ''}`}
>
  {/* Hero Image Section */}
  {image && (
    <div class={`relative overflow-hidden rounded-[2rem] shrink-0
      ${isFeatured ? 'h-80 md:h-[450px] mb-8' : 'h-48 mb-6'}`}>
      <img 
        src={image.startsWith('/') ? image : `/${image}`} 
        alt={title}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        loading="lazy"
        width={isFeatured ? 1200 : 400}
        height={isFeatured ? 600 : 192}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
      
      {isFeatured && (
        <div class="absolute top-6 left-6 px-4 py-1.5 bg-cyan-500/90 backdrop-blur-sm text-[10px] font-black text-black uppercase tracking-[0.2em] rounded-full z-10 shadow-xl">
          Lead_Brief_v3.0
        </div>
      )}
    </div>
  )}
  
  <div class="flex flex-col flex-1">
    <div class="flex items-center gap-2 mb-6">
      <span class="text-[10px] font-black text-cyan-500 uppercase tracking-widest px-2.5 py-1 bg-cyan-500/10 rounded border border-cyan-500/20">
        {humanize(category || 'Intel')}
      </span>
      {subcategory && (
        <span class="text-[10px] font-black text-purple-500 uppercase tracking-widest px-2.5 py-1 bg-purple-500/10 rounded border border-purple-500/20">
          {humanize(subcategory)}
        </span>
      )}
      <span class="text-[10px] font-mono text-gray-400 dark:text-gray-500 uppercase ml-auto">
        {dateFormat(date)}
      </span>
    </div>
    
    <h3 class={`font-black text-gray-900 dark:text-white mb-6 italic tracking-tighter leading-none group-hover:text-cyan-500 transition-colors
      ${isFeatured ? 'text-4xl md:text-7xl truncate-none' : 'text-xl'}`}>
      {title}
    </h3>
    
    {description && (
      <p class={`text-gray-500 dark:text-gray-400 font-medium leading-relaxed italic mb-8
        ${isFeatured ? 'text-lg md:text-2xl max-w-3xl line-clamp-3' : 'text-[12px] line-clamp-2'}`}>
        {description}
      </p>
    )}
    
    <div class="mt-auto flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-gray-400 dark:text-gray-600">
      <span class="group-hover:text-cyan-500 transition-colors">Access_Intel</span>
      <span class="text-cyan-500 opacity-0 group-hover:opacity-100 transition-all translate-x-[-4px] group-hover:translate-x-0">â†’</span>
    </div>
  </div>

  {/* Subtle gradient glow overlay */}
  <div class="absolute inset-0 rounded-[2.5rem] bg-gradient-to-br from-cyan-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
</a>

