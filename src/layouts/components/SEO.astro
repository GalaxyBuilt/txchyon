---
import config from "@/config/config.json";

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  type = "website",
  publishedTime,
  author = "GalaxyBuilt",
  section = "Crypto",
} = Astro.props;

const BASE = "https://txchyon.com";

const finalTitle = title
  ? `${title} // Txchyon OS`
  : "Txchyon OS — Institutional Research, Execution Terminals & Alpha Intelligence";

const finalDescription = description && description !== "true"
  ? description
  : "Txchyon OS: Institutional-grade research terminals, systematic alpha, marketing services, access passes, and the Genesis BTC platform. Built for serious capital.";

// Always use absolute URL so crawlers (Twitter, Facebook, LinkedIn) can fetch it
const finalImage = image
  ? (image.startsWith('http') ? image : `${BASE}${image}`)
  : `${BASE}/images/og-txchyon.png`;

const cleanPath = Astro.url.pathname.replace(/\/$/, "");
const finalCanonical = canonical ?? `${BASE}${cleanPath}`;
---

<!-- Primary Meta Tags -->
<title>{finalTitle}</title>
<meta name="title" content={finalTitle} />
<meta name="description" content={finalDescription} />
<meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
<meta name="author" content={author} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={finalCanonical} />
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={finalDescription} />
<meta property="og:image" content={finalImage} />
<meta property="og:image:secure_url" content={finalImage} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Txchyon OS — Institutional Research & Execution Platform" />
<meta property="og:site_name" content="Txchyon OS" />
<meta property="og:locale" content="en_US" />

<!-- Article-specific Open Graph -->
{type === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    <meta property="article:author" content={author} />
    <meta property="article:section" content={section} />
    <meta property="article:tag" content="DeFi" />
    <meta property="article:tag" content="Crypto" />
    <meta property="article:tag" content="Bitcoin" />
    <meta property="article:tag" content="Alpha" />
    <meta property="article:tag" content="Blockchain" />
    <meta property="article:tag" content="Web3" />
  </>
)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={finalCanonical} />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={finalDescription} />
<meta name="twitter:image" content={finalImage} />
<meta name="twitter:image:alt" content="Txchyon OS — Institutional Research & Execution Platform" />
<meta name="twitter:site" content="@txchyon" />
<meta name="twitter:creator" content="@txchyon" />

<!-- Canonical URL -->
<link rel="canonical" href={finalCanonical} />
