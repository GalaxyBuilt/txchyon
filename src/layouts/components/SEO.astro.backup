---
import config from "@/config/config.json";

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
  type = "website", // 'website' or 'article'
  publishedTime,
  author = "NefuTrades",
  section = "DeFi", // Changed from "Crypto" to "DeFi"
} = Astro.props;

// Simple, direct image URL - NO DOUBLE BASE_URL!
const finalTitle = title ?? "Txchyon - On-Chain Research & DeFi Alpha";
const finalDescription = description ?? "on-chain research + Defi alpha and Airdrops";
const finalImage = "https://txchyon.com/images/tokens.jpg"; // HARDCODED to avoid issues

// FIXED: Normalize canonical URL - remove trailing slash
const cleanPath = Astro.url.pathname.replace(/\/$/, ""); // Remove trailing slash
const finalCanonical = canonical ?? `https://txchyon.com${cleanPath}`;
---

<!-- Simple, reliable social meta tags -->
{!noindex && <meta name="robots" content="index, follow" />}
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Primary Meta Tags -->
<title>{finalTitle}</title>
<meta name="title" content={finalTitle} />
<meta name="description" content={finalDescription} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={finalCanonical} />
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={finalDescription} />
<meta property="og:image" content={finalImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={finalTitle} />
<meta property="og:site_name" content="Txchyon" />

<!-- Additional Open Graph tags for articles -->
{type === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    <meta property="article:author" content={author} />
    <meta property="article:section" content={section} />
    <meta property="article:tag" content="DeFi" />
    <meta property="article:tag" content="Crypto" />
    <meta property="article:tag" content="Blockchain" />
    <meta property="article:tag" content="Airdrops" />
  </>
)}

<!-- Twitter - FIXED SYNTAX -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={finalCanonical} />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={finalDescription} />
<meta name="twitter:image" content={finalImage} />
<meta name="twitter:image:alt" content={finalTitle} />
<meta name="twitter:site" content="@NefuTrades" />
<meta name="twitter:creator" content="@NefuTrades" />

<!-- Canonical URL -->
<link rel="canonical" href={finalCanonical} />