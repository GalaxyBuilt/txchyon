---
import Social from "@/components/Social.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import social from "@/config/social.json";
import { markdownify } from "@/lib/utils/textConverter";
---

<footer class="section bg-dark">
  <div class="container text-center">
    {/* Footer menu */}
    <ul class="mb-8 space-x-4">
      {
        menu.footer.map((item) => (
          <li class="inline-block">
            <a
              href={item.url}
              class="p-4 text-white/75 hover:text-white transition-all"
            >
              {item.name}
            </a>
          </li>
        ))
      }
      <li class="inline-block">
        <a
          href="/tools"
          class="p-4 text-white/75 hover:text-white transition-all"
        >
          Tools & Disclosures
        </a>
      </li>
    </ul>

    {/* Social icons (from your social.json) */}
    <Social source={social.main} className="social-icons mb-8" />

    {/* NEW: Prominent Telegram link */}
    <div class="mb-8">
      <a
        href="https://t.me/txchyon"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-all shadow-lg"
      >
        ✈️ Join Telegram Channel
      </a>
    </div>

    {/* Hidden IndieWeb verification links (including Telegram) */}
    <div class="hidden">
      <a rel="me" href="https://github.com/0xnefu">GitHub</a>
      <a rel="me" href="https://twitter.com/txchyon">Twitter</a>
      <a rel="me" href="https://x.com/txchyon">X.com</a>
      <a rel="me" href="https://t.me/txchyon">Telegram</a>
    </div>

    {/* Copyright */}
    <p set:html={markdownify(config.params.copyright)} class="text-white/75" />
  </div>
</footer>