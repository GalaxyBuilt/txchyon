---
import menu from "@/config/menu.json";
import { IoSearch } from "react-icons/io5";
const { main } = menu as { main: { name: string; url: string }[] };
---

<header class="py-6 border-b border-gray-200 dark:border-gray-800">
  <!-- Main container with proper left padding -->
  <div class="container mx-auto px-4 flex items-center justify-between relative">
    
    <!-- LOGO + NAME - Moved left with margin -->
    <div class="flex items-center space-x-3">
      <a href="/" class="flex items-center space-x-3 ml-2 lg:ml-4">
        <img
          src="/images/logo.jpg"
          alt="Txchyon"
          class="w-10 h-10 rounded-lg object-cover"
        />
        <span class="text-2xl font-bold text-black dark:text-white">
          Txchyon
        </span>
      </a>
    </div>

    <!-- Desktop Nav - Moved right with proper spacing -->
    <nav class="hidden md:flex items-center space-x-8 lg:space-x-10 ml-8 lg:ml-12">
      {main.map((item) => (
        <a
          href={item.url}
          class="text-lg font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition whitespace-nowrap"
        >
          {item.name}
        </a>
      ))}
    </nav>

    <!-- Search + Theme + RSS (desktop) - Moved right with more space -->
    <div class="flex items-center gap-6 lg:gap-8">
      <!-- RSS Feed Icon - More spacing -->
      <a href="/rss.xml" class="text-black dark:text-white hover:text-blue-600 transition ml-2" title="RSS Feed">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.18 15.64a2.18 2.18 0 1 1-4.36 0 2.18 2.18 0 0 1 4.36 0z"/>
          <path d="M4 4.44A11.83 11.83 0 0 1 15.89 16.33h-2.3A9.51 9.51 0 0 0 4 6.75z"/>
          <path d="M4 11.16a5.9 5.9 0 0 1 5.9 5.9h-2.3a3.6 3.6 0 0 0-3.6-3.6z"/>
        </svg>
      </a>
      
      <!-- Search Icon -->
      <a href="/search" class="text-black dark:text-white hover:text-blue-600 transition">
        <IoSearch class="w-6 h-6" />
      </a>
      
      <!-- Theme Toggle -->
      <button
        id="theme-toggle"
        class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition mr-2 lg:mr-4"
      >
        <!-- Moon icon for light mode (hidden in dark) -->
        <svg class="w-5 h-5 block data-[theme=dark]:hidden text-gray-700" fill="currentColor" viewBox="0 0 20 20">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
        </svg>
        <!-- Sun icon for dark mode (hidden in light) -->
        <svg class="w-5 h-5 hidden data-[theme=dark]:block text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zm-3.05-.293l-.707-.707a1 1 0 00-1.414 1.414l.707.707a1 1 0 001.414-1.414z"/>
        </svg>
      </button>

      <!-- Mobile Hamburger -->
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="text-black dark:text-white z-50">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path :class="{ 'hidden': open, 'block': !open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path :class="{ 'hidden': !open, 'block': open }" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile Menu Dropdown -->
        <div 
          x-show="open" 
          @click.away="open = false"
          x-transition
          class="absolute top-full left-0 right-0 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div class="px-8 py-10 space-y-8">
            {main.map((item) => (
              <a href={item.url} class="block text-2xl font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400">
                {item.name}
              </a>
            ))}
            
            <!-- CONTACT ADDED TO MOBILE MENU ONLY -->
            <a href="/contact" class="block text-2xl font-bold text-black dark:text-white hover:text-blue-600 dark:hover:text-blue-400">
              Contact Us
            </a>

            <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
              <div class="flex space-x-8 text-3xl">
                <a href="https://twitter.com/txchyon" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white">X</a>
                <a href="https://t.me/txchyon" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white">Telegram</a>
                <a href="https://tinyurl.com/thereplyguy" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white">Reply Guy</a>
                <!-- RSS Icon in Mobile Menu -->
                <a href="/rss.xml" class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white" title="RSS Feed">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M6.18 15.64a2.18 2.18 0 1 1-4.36 0 2.18 2.18 0 0 1 4.36 0z"/>
                    <path d="M4 4.44A11.83 11.83 0 0 1 15.89 16.33h-2.3A9.51 9.51 0 0 0 4 6.75z"/>
                    <path d="M4 11.16a5.9 5.9 0 0 1 5.9 5.9h-2.3a3.6 3.6 0 0 0-3.6-3.6z"/>
                  </svg>
                </a>
              </div>
            </div>

            <a href="https://tinyurl.com/txchyonnewsletter" target="_blank" class="block w-full bg-blue-600 hover:bg-blue-700 text-white text-center py-4 rounded-lg text-lg font-bold">
              Get Weekly Alpha →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Alpine.js (add once in layout or head if missing) -->
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

<!-- Optional: Add custom CSS if needed -->
<style>
  /* Additional custom spacing if Tailwind isn't enough */
  @media (min-width: 768px) {
    /* Ensure nav menu has enough space from logo */
    .header nav {
      margin-left: 2rem !important;
    }
    
    /* Ensure RSS button has breathing room */
    .header .rss-button {
      margin-left: 1rem !important;
      margin-right: 0.5rem !important;
    }
  }
</style>